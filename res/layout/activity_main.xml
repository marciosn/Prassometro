<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.andetonha.prassometro.MainActivity">

    <RelativeLayout
        android:id="@+id/prassometro_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <andetonha.speedometer.SpeedometerView
            android:id="@+id/speedometer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="2dp"/>

        <TextView
            android:id="@+id/level_maximo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <Button
            android:id="@+id/button2"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/button1"
            android:layout_alignBottom="@+id/button1"
            android:layout_alignParentLeft="true"
            android:text="@string/clean"
            android:onClick="cleanLevel" />

        <ImageButton
            android:id="@+id/cazalbe_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/speedometer"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:background="@null"
            android:src="@drawable/prassa" />

        <Button
            android:id="@+id/button1"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/level_maximo"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="44dp"
            android:onClick="shareStatus"
            android:text="@string/share" />

        <TextView
            android:id="@+id/level_maximo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/level_maximo"
            android:layout_centerHorizontal="true"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_above="@+id/button2"
            android:layout_alignParentLeft="true">
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>